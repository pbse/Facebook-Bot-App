{
  "name": "fbbot",
  "version": "0.0.0",
  "private": true,
  "main": "./build/server.js",
  "types": "./build/server.d.ts",
  "scripts": {
    "start": "npm run serve",
    "build": "rm -rf ./build && npm run build-ts && cp .env ./build/",
    "serve": "node build/server.js",
    "watch-node": "nodemon build/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect build/server.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "bootbot": "^1.0.16",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "lodash": "^4.17.11",
    "morgan": "~1.9.0",
    "pug": "2.0.0-beta11",
    "request": "^2.88.0",
    "typescript": "^3.0.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/request": "^2.47.1",
    "@types/winston": "^2.4.4",
    "chai": "^4.1.2",
    "express-validator": "^5.3.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.3",
    "ts-node": "^7.0.1"
  },
  "engines": {
    "node": ">=6.14.1",
    "yarn": ">=1.5.1"
  }
}
